---

:rubyforge:
  :username:          <%= ask 'Rubyforge user name (Leave empty for none)' %>
  :rdoc_dir:          :package

:rdoc:
  :rdoc_dir:          doc
  :rdoc_files:        [README, COPYING, ChangeLog, lib/**/*.rb]
  :main:              README
  :line_numbers:      true
  :inline_source:     true
  :all:               true
  :charset:           UTF-8

:gem:
  :author:            <%= ask 'Full name' %>
  :email:             <%= ask 'E-mail address' %>
  :has_rdoc:          true
  :append_svnversion: true
  :require_path:      lib

:test:
  :pattern:           test/**/*_test.rb

:spec:
  :pattern:           spec/**/*_spec.rb
  :helper:            spec/spec_helper.rb
  :options:           spec/spec.opts

# vim: syntax=yaml
